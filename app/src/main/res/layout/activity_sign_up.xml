<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whiteColor"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="165dp">

            <ImageView
                android:src="@drawable/kos1234"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_gravity="center"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Faqja per regjistrim ne aplikacion"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etmail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="12dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                android:drawableStart="@drawable/ic_assignment_ind_black_24dp"
                android:hint="Email adresa"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textEmailAddress"
                android:textColorHint="#AAAAAA"
                android:textColor="#000" />

            <EditText
                android:padding="12dp"
                android:background="@drawable/rounded"
                android:textColorHint="#AAAAAA"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/etpass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:hint="Fjalekalimi"
                android:inputType="textPassword"
                 />
            <EditText
                android:background="@drawable/rounded"
                android:textColorHint="#AAAAAA"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/etpass2"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:inputType="textPassword"
                android:layout_marginTop="15dp"
                android:hint="Rishtyp fjalekalimin"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:textColor="#2B60DE"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:text="Gjinia:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:buttonTint="#2B60DE"
                    android:layout_marginRight="5dp"
                    android:textSize="19dp"
                    android:text="M"
                    android:textColor="#2B60DE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                   android:buttonTint="#2B60DE"
                    android:textSize="19dp"
                    android:textColor="#2B60DE"
                    android:layout_marginRight="5dp"
                    android:text="F"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textColor="#2B60DE"
                    android:textSize="18sp"
                    android:text="Qyteti:"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <Spinner

                    android:backgroundTint="#AAAAAA"
                    android:layout_width="200dp"
                    android:id="@+id/qytetii"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>
            <Button

                android:id="@+id/btnRegjistrimi"
                android:fontFamily="@font/san1234"
                android:background="#2B60DE"
                android:text="REGJISTROHU"
                android:textColor="#FFF"
                android:padding="12dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#2B60DE"
                android:id="@+id/tvKycu"
                android:fontFamily="@font/san1234"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keni llogari? Kycu."/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>