<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RememberDrugsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarR"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/shtoNjoftim"
            android:text="Shto simptomat"
            android:textColor="#007AFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">
    
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TimePicker>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="Bej njoftimin e perditshem"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/switchi"
            android:switchMinWidth="40dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:id="@+id/mesazhiAlarmit"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:hint="Sheno mesazhin qe do t'i bashkengjitet njoftimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:id="@+id/btnSetAlarm"
        android:text="Shto njoftim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
</RelativeLayout>