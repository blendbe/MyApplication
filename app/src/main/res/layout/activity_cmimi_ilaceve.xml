<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whiteColor"
    android:layout_height="match_parent"
    tools:context=".CmimiIlaceve">
   <TextView
       android:textSize="21sp"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:id="@+id/loc"
       android:textAlignment="center"
       android:text="Lokalizo ne: "
       android:layout_margin="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <TextView
        android:textSize="17sp"
        android:id="@+id/ci"
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_marginRight="40dp"
        android:text="Gjithe Kosoven"
        android:background="@drawable/rounded"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/vv"
        android:layout_below="@+id/ci"
        android:background="@color/ngjyra3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Zgjedh qytet: "
        android:id="@+id/zgjedh"
        android:layout_below="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:textAlignment="center"
        android:id="@+id/citiess"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/zgjedh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <View
        android:id="@+id/vv1"
        android:layout_marginTop="5dp"
        android:layout_below="@id/citiess"
        android:background="@color/ngjyra3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
 <ListView
     android:id="@+id/listaBarn"
     android:layout_marginTop="20dp"
     android:layout_below="@+id/vv1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"></ListView>

</RelativeLayout>