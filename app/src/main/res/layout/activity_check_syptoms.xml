<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckSyptomsActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/to"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#007AFF"
            android:textStyle="bold"
            android:id="@+id/age"
            android:text="Sheno moshen"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:id="@+id/crd"
        android:layout_below="@+id/to"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="9dp"
        card_view:cardCornerRadius="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:src="@drawable/app_image"
            android:layout_width="200dp"
            android:layout_height="150dp" />
        <TextView
            android:id="@+id/t"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Faqja per kontrolle te simptomave"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:id="@+id/s"
        android:layout_below="@+id/crd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <TextView
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="Identifiko semundjet e mundshme dhe trajtimin e tyre nga simptomat qe keni"
        android:layout_margin="20dp"
        android:layout_below="@id/crd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
      <TextView
          android:textStyle="bold"
          android:textAlignment="center"
          android:text="Sheno moshen"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <EditText
            android:maxLength="3"
            android:layout_marginBottom="40dp"
            android:id="@+id/etMosha"
            android:digits="123456789"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:background="@drawable/rounded22"
            android:layout_height="40dp" />
    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/btnVazhdoo"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:text="Vazhdo"
        android:background="#007AFF"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>