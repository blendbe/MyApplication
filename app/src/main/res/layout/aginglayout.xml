<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/ngjyra3"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:transitionName="myImage"
            android:id="@+id/fotoja"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/mental" />
       <TextView
           android:textAllCaps="false"
           android:id="@+id/titulli"
           android:layout_marginLeft="10dp"
           android:text="What predicts a Woman's Odds of Living to 90?"
           android:textStyle="bold"
           android:textSize="17sp"
           android:textColor="#000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/desc1"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="A long-term study of about 22.000 postmenstrual women in the United States..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time1"
            android:layout_marginLeft="10dp"
            android:text="Dje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>